generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  firstName       String
  lastName        String
  email           String  @unique
  image           String?
  hashedPassword  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  permission      String
}

model Seo {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  meta_title        String?
  meta_description  String?
  meta_OpenGraph    String?
  page              String
}

model Files {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  size          String
  link          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  referenceId   String

  reference References @relation(fields: [referenceId], references: [id])
}

model References {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String

  files Files[]
}

model BlogCollections {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  image         String

  blog Blogs[]
}

model Blogs {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  content       String
  image         String
  tags          String[]
  collectionId  String
  author        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  collection BlogCollections @relation(fields: [collectionId], references: [id])
}

model Contact {
  id          String @id @default("1") @map("_id")
  phone       String
  email       String
  address     String
  facebook    String
  instagram   String
  tiktok      String
  youtube     String
  linkedin    String
  twitter     String
}

model Products {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  content       String
  images        String[]
  unit          String
}